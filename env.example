# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# SMS Provider Configuration
# Choose one: mock, twilio, or africas_talking
SMS_PROVIDER=mock

# Twilio Configuration (if using Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=your_twilio_from_number

# Africa's Talking Configuration (if using Africa's Talking)
AFRICAS_TALKING_API_KEY=your_africas_talking_api_key
AFRICAS_TALKING_USERNAME=your_africas_talking_username

# Optional: Environment identifier
ENVIRONMENT=development

# Optional: NextAuth configuration (if using NextAuth for additional auth)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Optional: Analytics (if using)
GOOGLE_ANALYTICS_ID=your_ga_id

# Optional: Error tracking (if using Sentry)
SENTRY_DSN=your_sentry_dsn
